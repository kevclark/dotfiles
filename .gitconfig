[user]
  name = Kevin Clark
  email = kev@devlap.com
[color]
  ui = auto
[push]
  default = simple
[diff]
  tool = bc3
  colorMoved = default
[difftool]
  bc3 = trustExitCode
  prompt = false
[merge]
  tool = bc3
  conflictstyle = diff3
[mergetool]
  trustExitCode = true
  keepBackup = false
[core]
  editor = vim
  pager = delta
[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
